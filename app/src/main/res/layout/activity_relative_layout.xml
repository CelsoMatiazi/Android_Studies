<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Layouts.RelativeLayout.RelativeLayoutActivity">


    <TextView
        android:id="@+id/constrains_box1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="25sp"
    />


    <TextView
        android:id="@+id/constrains_box2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/constrains_box1"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="25sp"

    />


    <TextView
        android:id="@+id/constrains_box3"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/constrains_box1"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="25sp"
    />

</RelativeLayout>