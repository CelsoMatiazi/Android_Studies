<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey_light"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light"
        tools:context=".share_permissions.WhatsAppActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/dark_green"
            app:title="Perfil"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/user_img_whatsapp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/tool_bar_whatsapp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/whatsapp_userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pat"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/background_cam_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="100dp"
            android:backgroundTint="@color/dark_green"
            app:layout_constraintBottom_toBottomOf="@id/user_img_whatsapp"
            app:layout_constraintEnd_toEndOf="@id/user_img_whatsapp"
            android:layout_margin="5dp"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_photo_camera_24"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/name_bar_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/user_img_whatsapp"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/whatsapp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pat Metheny"
                android:background="@null"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/whatsapp_share_btn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_baseline_share_24"
                android:text="Pat Metheny"
                android:textSize="20sp"
                android:textStyle="bold"
                app:tint="@color/green" />


            <ImageView
                android:id="@+id/whatsapp_editName_btn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:text="Pat Metheny"
                android:textSize="20sp"
                android:textStyle="bold"
                app:tint="@color/green" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/user_info_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_bar_whatsapp"
            android:text="@string/whatsapp_info"
            android:textSize="15sp"
            android:layout_margin="15dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_info_whatsapp"

            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recado e numero de telefone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_margin="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey there! I am using WhatsApp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_light"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5511 9 9999-9999"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginVertical="15dp"

                    />



            </LinearLayout>






        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

