<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rv_name_ex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Celso Ricardi"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="..."
        android:padding="5dp"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"

        />


    <ImageView
        android:id="@+id/IV_feed_layout_rvex4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/rv_name_ex4"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/IV_like_rvex4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_outline_favorite_border_24"
        android:layout_margin="5dp"
        android:layout_below="@id/IV_feed_layout_rvex4"
        />


    <ImageView
        android:id="@+id/IV_comment_rvex4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/IV_like_rvex4"
        android:layout_below="@id/IV_feed_layout_rvex4"
        />



    <ImageView
        android:id="@+id/IV_send_rvex4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_send_24"
        android:layout_margin="5dp"
        android:layout_below="@id/IV_feed_layout_rvex4"
        android:layout_toEndOf="@id/IV_comment_rvex4"
        />

    <ImageView
        android:id="@+id/IV_flag_rvex4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_turned_in_not_24"
        android:layout_margin="5dp"
        android:layout_below="@id/IV_feed_layout_rvex4"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/TV_curtidas_rvex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/IV_like_rvex4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="14 curtidas"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/TV_user_rvex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_curtidas_rvex4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Celso Ricardi"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/TV_descricao_rvex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_curtidas_rvex4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/TV_user_rvex4"
        android:text="Hoje o dia esta magnifico.."
        android:textColor="@color/white" />









</RelativeLayout>